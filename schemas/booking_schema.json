{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Booking Schema",
    "type": "object",
    "required": ["user_id", "class_id", "booking_date", "time_slot"],
    "properties": {
        "user_id": {
            "type": "integer",
            "minimum": 1
        },
        "class_id": {
            "type": "integer",
            "minimum": 1
        },
        "booking_date": {
            "type": "string",
            "format": "date"
        },
        "time_slot": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
        },
        "status": {
            "type": "string",
            "enum": ["pending", "confirmed", "cancelled", "completed"]
        },
        "notes": {
            "type": "string",
            "maxLength": 500
        }
    }
} 